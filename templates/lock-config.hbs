<div class="lockpicking-config">
  <div class="form-group">
    <label>Charakter:</label>
    <select name="actorId">
      {{#each actors}}
        <option value="{{this.id}}" {{#if (eq ../actorId this.id)}}selected{{/if}}>{{this.name}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label>Schwierigkeitsgrad (DC):</label>
    <input type="number" name="dc" value="{{dc}}">
  </div>

  <div class="form-group">
    <label>Fertigkeit-Bonus:</label>
    <input type="number" name="bonus" value="{{bonus}}">
  </div>

  <button type="submit" class="dialog-button default">
    Lockpicking starten
  </button>
</div>
