<form class="lp-config">
  <div class="form-group">
    <label>Charakter:</label>
    <select name="actorId" required>
      {{#if actors.length}}
        {{#each actors}}
          <option value="{{this.id}}" {{#if (eq ../defaultActorId this.id)}}selected{{/if}}>
            {{this.name}}
          </option>
        {{/each}}
      {{else}}
        <option value="">Keine Token gefunden</option>
      {{/if}}
    </select>
  </div>

  <div class="form-group">
    <label>Schwierigkeitsgrad (DC):</label>
    <input type="number" name="dc" value="{{defaultDc}}" min="5" max="30" step="1" required />
  </div>

  <footer class="sheet-footer flexrow">
    <button type="submit" class="lp-button-primary">Lockpicking starten</button>
  </footer>
</form>
