<div class="lp-config">
  <div class="form-group">
    <label>Charakter:</label>
    <select name="actorId" required>
      {{#each actors}}
        <option value="{{this.id}}">{{this.name}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label>Schwierigkeitsgrad (DC):</label>
    <input type="number" name="dc" value="{{defaultDc}}" min="1" max="30" step="1" />
  </div>

  <footer class="sheet-footer flexrow">
    <button type="submit" class="dialog-button">Lockpicking starten</button>
  </footer>
</div>
