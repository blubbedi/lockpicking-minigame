<div class="lp-container">
  <header class="lp-header">
    <h2>Schlossknacken</h2>
  </header>

  <section class="lp-info">
    <p>
      {{actorName}} – DC {{dc}}, Bonus {{bonus}}
      {{#if disadvantage}}
        <span class="lp-badge disadvantage">mit Nachteil</span>
      {{else}}
        <span class="lp-badge advantage">ohne Nachteil</span>
      {{/if}}
    </p>

    <p class="lp-hint">
      Drücke die angezeigten Pfeiltasten, bevor der Zeitbalken leer ist.
      Jede Taste erscheint einzeln. Geschaffte Schritte werden oben grün markiert.
    </p>
  </section>

  <!-- ✓ OBERE LEISTE: ZEIGT NUR ABGESCHLOSSENE SCHRITTE -->
  <section class="lp-steps">
    {{#each steps as |step|}}
      {{#if (eq step.state "done")}}
        <div class="lp-step done">
          {{step.icon}}
        </div>
      {{/if}}
    {{/each}}
  </section>

  <!-- TIMER -->
  <section class="lp-timer">
    <div class="lp-timer-bar">
      <div class="lp-timer-fill" style="width: {{timerPercent}}%;"></div>
    </div>
  </section>

  <!-- AKTUELLE TASTE -->
  <section class="lp-current-key">
    <div class="lp-current-key-box">
      {{currentIcon}}
    </div>
    <div class="lp-current-label">Aktuelle Taste</div>
  </section>

  <!-- BUTTONS -->
  <footer class="lp-footer">
    <button class="lp-button-cancel" data-action="cancel">Abbrechen</button>
  </footer>
</div>
